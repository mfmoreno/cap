    rdfs:range cardano:TransactionMetadata .

cardano:hasGovernanceProposal a owl:ObjectProperty ;
    rdfs:label "has governance proposal" ;
    rdfs:comment "Relates a transaction metadata to a governance proposal." ;
    rdfs:domain cardano:TransactionMetadata ;
    rdfs:range cardano:GovernanceProposal .

cardano:hasGovernanceAction a owl:ObjectProperty ;
    rdfs:label "has governance action" ;
